<Manager>:
	MenuPage:
		name: 'menu'
	NewWordPage:
		name: 'newword'
	FlashCard:
		name: 'flashcard'
	WordGroups:
		name: 'wordgroup'
	DisplayPage:
		name: 'display'
	FlashDisplayPage:
		name: 'flash_display'

<MenuPage>:
	Image:
    	size_hint:.90,.90
    	source:'BackBlue.png'
	Label: 
		text: "Vocabulary Journal"
		size_hint: .90,.10
		pos_hint:{'center_x': 0.4,'center_y':0.8 }
	Label: 
		text: "Welcome to your personal vocabulary Journal"
		size_hint: .90,.30
		pos_hint:{'center_x': 0.4,'center_y':0.6 }
	
       

	StackLayout:
		orientation: 'tb-rl'
		spacing: 10
		padding: 10

		Button:
			text: 'Search'
			size_hint: None,.20
			width: 130
			background_down:'BlueShadeDot.png'
			background_normal: 'NightSky.png'
			on_press: root.manager.current='display'
		Button:
			text: 'New Word'
			size_hint: None,.20
			width: 130
			background_down:'BlueShadeDot.png'
			background_normal: 'NightSky.png'
			on_press: root.manager.current='newword'
		Button:
			text: 'Flash Cards'
			size_hint: None,.20
			width: 130
			background_down:'BlueShadeDot.png'
			background_normal: 'NightSky.png'
			on_press: root.manager.current='flashcard'
			
			
		Button:
			text: 'Word Groups'
			size_hint: None,.20
			width: 130
			background_down:'BlueShadeDot.png'
			background_normal: 'NightSky.png'
			on_press: root.manager.current='wordgroup'


<NewWordPage>:
	id: refer_to_it
	word_box: word_input
	meaning_box: meaning_input
	synonym_box: Synonym_input
	ant_box: ant_input
	sentence_box: sentence_input
	StackLayout:
		orientation: 'tb-rl'
		spacing: 10
		padding: 90
		TextInput:
			text: "write your word here"
			color: 1,1,1,1
			id: word_input
			width: 300
			size_hint: None, .10
			allow_copy: True
			auto_indent: True
			background_normal:'text3.png'
			background_active:'text2.png'


		TextInput:
			text: "write meaning of your word here"
			color: 1,1,1,1
			id: meaning_input
			width: 600
			size_hint: None, .20
			allow_copy: True
			auto_indent: True
			background_normal:'text3.png'
			background_active:'text2.png'
			
		TextInput:
			text: "write Synonyms of your word here"
			color: 1,1,1,1
			id: Synonym_input
			width: 600
			size_hint: None, .20
			allow_copy: True
			auto_indent: True
			background_normal:'text3.png'
			background_active:'text2.png'
			
		TextInput:
			text: "write antonyms of your text here"
			color: 1,1,1,1
			id: ant_input
			width: 600
			size_hint: None, .20
			allow_copy: True
			auto_indent: True
			background_normal:'text3.png'
			background_active:'text2.png'
			
		TextInput:
			text: "write a sentence based on your word here"
			color: 1,1,1,1
			id: sentence_input
			width: 600
			size_hint: None, .20
			allow_copy: True
			auto_indent: True
			background_normal:'text3.png'
			background_active:'text2.png'

		Button:
			text: 'Save'
			size_hint: None,.10
			width: 130
			background_down:'BlueShadeDot.png'
			background_normal: 'NightSky.png'
			on_press: refer_to_it.saving_data() 	

<DisplayPage>:
	search_box: search_text
	BoxLayout:
		size_hint_y: None
        height: '48dp'

        TextInput:
        	hint_text:'enter the word you wanna search here'
        	text_color: 0,0,0,1
        	id: search_text
        	multiline:False
        	on_text_validate: root.search_function()
        	allow_copy: True
			auto_indent: True
			background_normal:'text3.png'
			background_active:'text2.png'

    Accordion:
    	orientation: 'vertical'

    	AccordionItem:
    		background_normal:'moreblack.png'
    		background_selected:'light black.png'
    		title:'meaning'

    		Label: 
    			text: root.label_maening
    			text_size: self.width, None

    	AccordionItem:
    		background_normal:'moreblack.png'
    		background_selected:'light black.png'
    		title:'Synonym'

    	
    		Label:
    			text: root.label_synonym
    			text_size: self.width, None

    	AccordionItem:
    		background_normal:'moreblack.png'
    		background_selected:'light black.png'
    		title:'Antonym'

    	 
    		Label:
    			text: root.label_ant
    			text_size: self.width, None

    	AccordionItem:
    		background_normal:'moreblack.png'
    		background_selected:'light black.png'
    		title:'Sentence'

    	
    		Label:
    			text: root.label_sentence
    			text_size: self.width, None

